#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.expand_path(File.join(File.dirname(__FILE__),".." , "lib")))
require 'ruby_logic'

user_input = gets.chomp
parser = Parser.new(user_input)

def pretty_print(parse_output)
  print "[ "
  if parse_output.class == Array
    parse_output.each do |token|
      if token.class == Array
        pretty_print(token)
      else
        print " #{token.type} "
      end
    end
  else
    print " #{parse_output.type} "
  end
  print " ]"
end

puts
pretty_print(parser.parse)
puts

